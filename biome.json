{
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 100,
    "formatWithErrors": true
  },
  "linter": {
    "rules": {
      "complexity": {
        "useArrowFunction": "off"
      },
      "correctness": {
        "noUnusedImports": "warn",
        "noUnusedVariables": "warn",
        "noUndeclaredVariables": "error"
      },
      "style": {
        "noParameterAssign": "warn"
      }
    }
  }
}
